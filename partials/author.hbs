<div class="author">
  <div class="author--media">
    <nav class="fabs">
      <a class="fab large ripple twitter" href="https://twitter.com/MatthewBorders" target="_blank">
        <i class="mdi mdi-twitter"></i>
      </a>
      <a class="fab large ripple github" href="https://github.com/Rathmatik" target="_blank">
        <i class="mdi mdi-github-circle"></i>
      </a>
    </nav>
    {{#if image}}
      <img class="image" src="{{image}}" />
    {{else}}
      <img class="image" src="{{@blog.url}}/shared/img/user-image.png" />
    {{/if}}
  </div>
  <div class="author--info">
    <h5 class="name">{{name}}</h5>
    <p class="bio">{{bio}}</p>
  </div>
</div>
